{
  "name": "wordle",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Roman",
    "email": "roman_kuchuk@outlook.com",
    "url": "https://github.com/Roman13-k"
  },
  "main": "build/main.js",
  "description": "Wordle Clone",
  "scripts": {
    "build": "run-s next:build electron:build",
    "dist": "run-s build electron:dist",
    "electron:build_watch": "tsup --watch",
    "electron:build": "tsup",
    "electron:dev": "npm-run-all --parallel electron:build_watch electron:watch",
    "electron:dist:deb": "electron-builder --linux deb",
    "electron:dist": "electron-builder --dir",
    "electron:watch": "cross-env NODE_ENV='development' nodemon",
    "format": "dprint fmt",
    "next:build": "next build --turbopack",
    "next:dev": "next dev --turbopack",
    "next:lint": "eslint",
    "next:start": "next start",
    "postinstall": "electron-builder install-app-deps",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@electron-toolkit/utils": "^4.0.0",
    "@hookform/resolvers": "^5.2.2",
    "@next/env": "^16.1.1",
    "@phosphor-icons/react": "^2.1.10",
    "@supabase/supabase-js": "^2.89.0",
    "@tanstack/react-query": "^5.90.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "get-port-please": "^3.2.0",
    "lucide-react": "^0.562.0",
    "motion": "^12.23.26",
    "next": "16.1.1",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.70.0",
    "shadcn": "^3.6.2",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^10.1.0",
    "dprint": "^0.50.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4",
    "tsup": "^8.5.1",
    "typescript": "^5"
  },
  "build": {
    "asar": true,
    "executableName": "WordleClone",
    "asarUnpack": [
      "node_modules/next",
      "node_modules/@img",
      "node_modules/sharp",
      "**\\*.{node,dll}"
    ],
    "files": [
      "build",
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "!**/.env",
          "!**/package.json"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      },
      {
        "from": "public",
        "to": "app/public"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    }
  }
}
